<h1>appointments</h1>
<a href="/appform"><button>make appointment</button></a>

{{#each appointment}}

<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">
                    {{startDate}} -
                    {{endDate}} </span>
                <p>Owner - {{owner}}</p>
                <p>Dog - {{dog}}</p>
            </div>
            <div class="card-action">
                
                    <form class="btn" action="/apps/{{_id}}?_method=DELETE" method="POST">
                        <button type="submit"> Delete </button></form>

                    <a href="{{_id}}/appointment" class="btn">Sign Up </a>

                    <a href="{{_id}}/edit" class="btn">Edit </a>
                    
                
            </div>
        </div>
    </div>
</div>





