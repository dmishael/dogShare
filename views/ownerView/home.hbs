<h1>Welcome to Ruff House</h1>





{{#each profile}}
<div class="row">
    <div class="col s12 m6">
        <div class="card black">
            <div class="card-content white-text">
                <span class="card-title"></span>
                <p>Name - {{name}}</p>
                <p>Address - {{address}}</p>
                <p>Dog name - {{dogName}}</p>

                <div class="card-action">

                    <form class="btn" action="/{{_id}}?_method=DELETE" method="POST" style="background-color:white">
                        <button type="submit"> Delete </button></form>


                </div>

            </div>
        </div>
    </div>

    {{/each}}